<!-- views/messages/create.hbs -->
<h1>Add a new message</h1>
<form method="POST" action="/messages/{{message.id}}?_method=PUT">
    <div>
        <label for="title">Title: </label>
        <input type="text" id="title" name="title" value="{{message.title}}">
    </div>
    <div>
        <label for="name">Name: </label>
        <input type="text" id="name" name="name" value="{{message.name}}">
    </div>
    <div>
        <label for="email">Email: </label>
        <input type="email" id="email" name="email" value="{{message.email}}">
    </div>
    <div>
        <label for="subject">Subject: </label>
        <input type="text" id="subject" name="subject" value="{{message.subject}}">
    </div>
    <div>
        <label for="message">Message: </label>
        <textarea id="message" name="message" value="{{message.message}}"></textarea>
    </div>
    <div>
        <input type="submit" value="Store">
    </div>
</form>
